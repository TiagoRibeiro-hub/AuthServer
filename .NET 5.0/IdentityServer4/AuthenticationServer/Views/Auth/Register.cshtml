@model RegisterViewModel

<form asp-controller="Auth" asp-action="Register" method="post">
	<input type="hidden" asp-for="ReturnUrl"/>
	<div>
		<label>Username</label>
		<input asp-for="UserName" />
		<span asp-validation-for="UserName"></span> 
	</div>
	<div>
		<label>Password</label>
		<input asp-for="Password" />
		<span asp-validation-for="Password"></span> 
	</div>
	<div>
		<label>Confirm Password</label>
		<input asp-for="ConfirmPassword" />
		<span asp-validation-for="ConfirmPassword"></span> 
	</div>
	<div>
		<button type="submit">Submit</button>
	</div>
</form>

@*Go back to Log in page must have the returnurl to don't lose the content*@
<div>
	<a asp-controller="Auth" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl">Back to LogIn</a>
</div>
